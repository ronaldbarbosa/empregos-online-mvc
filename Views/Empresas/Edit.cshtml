@model EmpregosOnLine.Models.ViewModels.EmpresaEnderecoViewModel

@{
    ViewData["Title"] = "Editar empresa";
}

<h4>Editar dados: @Model.Empresa.Nome</h4>
<hr />
<div class="row">
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Empresa.Id" />
            <input type="hidden" asp-for="Endereco.Id" />
            <input type="hidden" asp-for="Empresa.EnderecoId" />
            <div>
                <h4>Dados da empresa</h4>
                <div class="col-sm-4">
                    <label asp-for="Empresa.Nome" class="form-label"></label>
                    <input asp-for="Empresa.Nome" class="form-control" />
                    <span asp-validation-for="Empresa.Nome" class="text-danger"></span>
                </div>
                <div class="col-sm-4">
                    <label asp-for="Empresa.NomeFantasia" class="form-label"></label>
                    <input asp-for="Empresa.NomeFantasia" class="form-control" />
                    <span asp-validation-for="Empresa.NomeFantasia" class="text-danger"></span>
                </div>
                <div class="col-sm-2">
                    <label asp-for="Empresa.CNPJ" class="form-label"></label>
                    <input asp-for="Empresa.CNPJ" class="form-control" />
                    <span asp-validation-for="Empresa.CNPJ" class="text-danger"></span>
                </div>
                <div class="col-sm-2">
                    <label asp-for="Empresa.UrlImagem" class="form-label"></label>
                    <input asp-for="Empresa.UrlImagem" class="form-control" />
                    <span asp-validation-for="Empresa.UrlImagem" class="text-danger"></span>
                </div>
            </div>
            <div class="mt-3">
                <h4>Endereço</h4>
                <div class="col-sm-2">
                    <label asp-for="Endereco.CEP" class="form-label"></label>
                    <input asp-for="Endereco.CEP" class="form-control" />
                    <span asp-validation-for="Endereco.CEP" class="text-danger"></span>
                </div>
                <div class="col-sm-4">
                    <label asp-for="Endereco.Logradouro" class="form-label"></label>
                    <input asp-for="Endereco.Logradouro" class="form-control" />
                    <span asp-validation-for="Endereco.Logradouro" class="text-danger"></span>
                </div>
                <div class="col-sm-1">
                    <label asp-for="Endereco.Numero" class="form-label"></label>
                    <input asp-for="Endereco.Numero" class="form-control" />
                    <span asp-validation-for="Endereco.Numero" class="text-danger"></span>
                </div>
                <div class="col-sm-4">
                    <label asp-for="Endereco.Complemento" class="form-label"></label>
                    <input asp-for="Endereco.Complemento" class="form-control" />
                    <span asp-validation-for="Endereco.Complemento" class="text-danger"></span>
                </div>
                <div class="col-sm-4">
                    <label asp-for="Endereco.Bairro" class="form-label"></label>
                    <input asp-for="Endereco.Bairro" class="form-control" />
                    <span asp-validation-for="Endereco.Bairro" class="text-danger"></span>
                </div>
                <div class="col-sm-4">
                    <label asp-for="Endereco.Cidade" class="form-label"></label>
                    <input asp-for="Endereco.Cidade" class="form-control" />
                    <span asp-validation-for="Endereco.Cidade" class="text-danger"></span>
                </div>
                <div class="col-sm-4">
                    <label asp-for="Endereco.Estado" class="form-label"></label>
                    <input asp-for="Endereco.Estado" class="form-control" />
                    <span asp-validation-for="Endereco.Estado" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group my-3">
                <a asp-action="Index" class="btn bg-tomate txt-claro mx-2">Cancelar</a>
                <input type="submit" value="Salvar" class="btn bg-verde txt-claro mx-2" />
            </div>
        </form>
    </div>
</div>

<div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
