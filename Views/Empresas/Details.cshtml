@model EmpregosOnLine.Models.Empresa

@{
    ViewData["Title"] = "Detalhes sobre a empresa";
}

<h3>@ViewData["Title"]</h3>

<div>
    <h4>Empresa</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeFantasia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeFantasia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CNPJ)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CNPJ)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Endereco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco.Cidade) - 
            @Html.DisplayFor(model => model.Endereco.Estado)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn bg-verde txt-claro mx-2">Editar</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn bg-tomate txt-claro mx-2">Excluir</a>
    <a asp-action="Index" class="btn bg-escuro txt-claro mx-2">Voltar</a>
</div>
<div class="mt-5">
    <h3>@Html.DisplayNameFor(model => model.Vagas)</h3>
    <hr />
    @if (Model.Vagas.Count == 0)
    {
        <p>Nenhuma vaga cadastrada!</p>
        <a asp-controller="Vagas" asp-action="Create" class="btn bg-verde txt-claro mx-2">Criar nova vaga</a>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th class="col-6">
                        Vagas
                    </th>
                    <th class="col-6"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vaga in Model.Vagas)
                {
                    <tr>
                        <td class="py-3">
                            @Html.DisplayFor(modelItem => vaga.Titulo)
                        </td>
                        <td>
                            <a asp-controller="Vagas" asp-action="Details" asp-route-id="@vaga.Id" class="btn border">Detalhes</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
